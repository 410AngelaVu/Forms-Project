<%= form_for @friend do %>

  <div class="field form-group">
   <label>First Name:</label>
   <br>
   <%= text_field_tag :'friend[first_name]' %>
  </div>

  <div class="field form-group">
    <label>Last Name:</label>
   <br>
   <%= text_field_tag :'friend[last_name]' %>
  </div>

  <div class="field form-group">
      <label>Email:</label>
   <br>
   <%= email_field_tag :'friend[email]' %> 
  </div>

  <div class="field form-group">
    <label>Phone:</label>
   <br>
   <%= text_field_tag :'friend[phone]' %>
    
  </div>

  <div class="field form-group">
    <label>Twitter:</label>
   <br>
   <%= text_field_tag :'friend[twitter]' %>
    
  </div>

   <div class="field form-group">
    <label>Password:</label>
   <br>
   <%= text_field_tag :'friend[password]' %>
   
  </div>

  <div class="actions">
    <%= submit_tag 'Create Friend' %>
  </div>
<% end %>

